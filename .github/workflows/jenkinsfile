pipeline {
    agent any

    tools {
        checkmarx 'CheckmarxCLI' // Nome da instalação do CLI
    }

    environment {
        CHECKMARX_PROJECT_NAME = 'Jenkins_SCM'
        CHECKMARX_BRANCH_NAME = 'main'
        CHECKMARX_ADDITIONAL_ARGS = '--scan-types sast'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "${CHECKMARX_BRANCH_NAME}", url: 'https://github.com/Giuzucca/jenkins_SCM/blob/main/.github/workflows/jenkinsfile'
            }
        }

        stage('Checkmarx Scan') {
            steps {
                checkmarxASTScanner(
                    projectName: "${CHECKMARX_PROJECT_NAME}",
                    branchName: "${CHECKMARX_BRANCH_NAME}",
                    additionalArguments: "${CHECKMARX_ADDITIONAL_ARGS}"
                )
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
    }
}
